  },
  "scripts": {
    "build": "npx babel src/buildComponents/entriesandchunks.js -o buildComponents/entriesandchunks.js --no-comments --minified --compact true",
    "build:components:constants": "../constants/bin/cli.js test/buildComponents \"$(< test/buildComponents/overrides.json)\"",
    "clean": "rm -r *.tgz test/buildComponents/build test/buildComponents/dummy-build 2>/dev/null; true",
    "lint": "eslint src/**/*.js --fix",
    "prepack": "npm run clean",
    "pretest:components:raw": "npm run build:components:constants",
    "pretest:components:override": "npm run build:components:constants",
    "test": "echo \"\n------------------------------ react4xp main: NO TESTS IMPLEMENTED YET! See sub-packages. ------------------------------\n\"",
    "test:components:entriesAndChunks": "mocha --require @babel/register --require @babel/polyfill --require test/buildComponents/test_helper.js \"test/**/*@(spec.js)\"",
    "test:components:raw": "webpack --config buildComponents/webpack.config.js --env ENTRY_DIRS=entries --env CHUNK_DIRS=sharedComps,redux --env ROOT=$(pwd)/../.. --env OVERRIDE_COMPONENT_WEBPACK=test/buildComponents/webpack.config.symlinks.override.js --env REACT4XP_CONFIG_FILE=test/buildComponents/build/constants.json --env VERBOSE=true",
    "test:components:override": "webpack --config buildComponents/webpack.config.js --env OVERRIDE_COMPONENT_WEBPACK=test/buildComponents/webpack.config.override.js --env ROOT=$(pwd)/../.. --env VERBOSE=true --env REACT4XP_CONFIG_FILE=test/buildComponents/build/constants.json"
  },
  "version": "2.0.1-SNAPSHOT"
}
